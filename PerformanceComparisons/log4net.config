<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
  </appSettings>
  <log4net>
    <root>
      <level value="ALL"/>
      <appender-ref ref="Log4NetRollingAppender" />
   </root>
    <logger name="EasyLogger" additivity="false">
      <level value="ALL"/>
      <appender-ref ref="AsyncBufferingForwarder"/>
    </logger>
    <appender name="AsyncBufferingForwarder" type="Easy.Logger.AsyncBufferingForwardingAppender">
      <lossy value="false" />
      <bufferSize value="512" />
      <Fix value="268" />
      <appender-ref ref="EasyLog4NetRollingAppender"/>
    </appender>
    <appender name="EasyLog4NetRollingAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\\logs\\EtwNServiceBus\\"/>
      <filter type="log4net.Filter.LevelMatchFilter">
        <acceptOnMatch value="true" />
        <levelToMatch  value="DEBUG" />
      </filter>
      <filter type="log4net.Filter.LevelMatchFilter">
        <acceptOnMatch value="true" />
        <levelToMatch  value="ERROR" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <datePattern value="yyyy-MM-dd'-easyLogger.log'" />
      <staticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline %date %level caller:%logger message:%message threadId:[%thread] user:%username "/>
      </layout>
    </appender>
    <appender name="Log4NetRollingAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\\logs\\EtwNServiceBus\\"/>
      <filter type="log4net.Filter.LevelMatchFilter">
        <acceptOnMatch value="true" />
        <levelToMatch  value="DEBUG" />
      </filter>
      <filter type="log4net.Filter.LevelMatchFilter">
        <acceptOnMatch value="true" />
        <levelToMatch  value="ERROR" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <appendToFile value="true"/>
      <rollingStyle value="Date"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <datePattern value="yyyy-MM-dd'-standardLog4Net.log'" />
      <staticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline %date %level caller:%logger message:%message threadId:[%thread] user:%username "/>
      </layout>
    </appender>
  </log4net>
</configuration>